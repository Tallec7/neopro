{
  "name": "neopro-sync-agent",
  "version": "1.0.0",
  "description": "Agent de synchronisation NEOPRO pour Raspberry Pi",
  "main": "src/agent.js",
  "scripts": {
    "start": "node src/agent.js",
    "dev": "nodemon src/agent.js",
    "install-service": "sudo node scripts/install-service.js",
    "register": "node scripts/register-site.js",
    "diagnose": "node scripts/diagnose.js",
    "resync": "node scripts/resync-apikey.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:connection": "node src/test-connection.js"
  },
  "keywords": ["neopro", "raspberry-pi", "sync-agent"],
  "author": "NEOPRO Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "socket.io-client": "^4.7.2",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.2.0",
    "systeminformation": "^5.21.20",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/test-connection.js",
      "!src/agent.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": ["**/__tests__/**/*.test.js"],
    "verbose": true,
    "clearMocks": true,
    "resetMocks": true
  }
}
