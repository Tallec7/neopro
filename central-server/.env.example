# Server
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/neopro_central
DATABASE_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=8h

# CORS (include Raspberry Pi origins for local TV displays)
ALLOWED_ORIGINS=http://localhost:4200,https://control.neopro.fr,http://neopro.local,http://neopro.local:4200,http://192.168.4.1,http://192.168.4.1:4200

# Supabase Storage (pour vid√©os temporaires)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# Email (pour alertes)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@neopro.fr
SMTP_PASS=your-email-password
EMAIL_FROM=NEOPRO Fleet <noreply@neopro.fr>

# Logging
LOG_LEVEL=info

# Logtail (Better Stack) - Centralized logging
LOGTAIL_TOKEN=

# Slack Alerts
SLACK_WEBHOOK_URL=
SLACK_ALERTS_ENABLED=false
