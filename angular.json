{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "raspberry": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "raspberry",
      "sourceRoot": "raspberry/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/raspberry",
            "browser": "raspberry/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "raspberry/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "raspberry/public"
              },
              {
                "glob": "**/*",
                "input": "raspberry/src/assets/demo-configs",
                "output": "demo-configs"
              },
              {
                "glob": "**/*",
                "input": "raspberry/admin/public",
                "output": "admin"
              }
            ],
            "styles": ["raspberry/src/styles.scss"],
            "allowedCommonJsDependencies": [
              "global/window",
              "global/document",
              "@videojs/xhr",
              "videojs-vtt.js",
              "mux.js/lib/tools/parse-sidx",
              "mux.js/lib/utils/clock",
              "@xmldom/xmldom"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "raspberry/src/environments/environment.ts",
                  "with": "raspberry/src/environments/environment.prod.ts"
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3MB",
                  "maximumError": "5MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "16kB",
                  "maximumError": "20kB"
                }
              ],
              "outputHashing": "all"
            },
            "raspberry": {
              "fileReplacements": [
                {
                  "replace": "raspberry/src/environments/environment.ts",
                  "with": "raspberry/src/environments/environment.raspberry.ts"
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3MB",
                  "maximumError": "5MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "16kB",
                  "maximumError": "20kB"
                }
              ],
              "outputHashing": "all"
            },
            "demo": {
              "fileReplacements": [
                {
                  "replace": "raspberry/src/environments/environment.ts",
                  "with": "raspberry/src/environments/environment.demo.ts"
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3MB",
                  "maximumError": "5MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "16kB",
                  "maximumError": "20kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "raspberry:build:production"
            },
            "development": {
              "buildTarget": "raspberry:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "raspberry/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "raspberry/public"
              }
            ],
            "styles": ["raspberry/src/styles.scss"],
            "karmaConfig": "raspberry/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["raspberry/src/**/*.ts", "raspberry/src/**/*.html"]
          }
        }
      }
    },
    "central-dashboard": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "central-dashboard",
      "sourceRoot": "central-dashboard/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/central-dashboard",
            "browser": "central-dashboard/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "central-dashboard/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "central-dashboard/src/favicon.ico",
              "central-dashboard/src/assets",
              {
                "glob": ".htaccess",
                "input": "central-dashboard/",
                "output": "/"
              }
            ],
            "styles": ["central-dashboard/src/styles.scss"]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "15kb",
                  "maximumError": "20kb"
                }
              ],
              "outputHashing": "all",
              "fileReplacements": [
                {
                  "replace": "central-dashboard/src/environments/environment.ts",
                  "with": "central-dashboard/src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "port": 4300
          },
          "configurations": {
            "production": {
              "buildTarget": "central-dashboard:build:production"
            },
            "development": {
              "buildTarget": "central-dashboard:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "central-dashboard/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": ["central-dashboard/src/favicon.ico", "central-dashboard/src/assets"],
            "styles": ["central-dashboard/src/styles.scss"],
            "karmaConfig": "central-dashboard/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["central-dashboard/src/**/*.ts", "central-dashboard/src/**/*.html"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": ["angular-eslint"]
  }
}
