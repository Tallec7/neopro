{
  "name": "neopro",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve raspberry",
    "start:raspberry": "ng serve raspberry",
    "start:central": "ng serve central-dashboard",
    "build": "ng build raspberry && ng build central-dashboard",
    "build:raspberry": "./raspberry/scripts/build-raspberry.sh",
    "build:central": "ng build central-dashboard",
    "deploy:raspberry": "./raspberry/scripts/build-and-deploy.sh",
    "watch": "ng build raspberry --watch --configuration development",
    "watch:central": "ng build central-dashboard --watch --configuration development",
    "test": "ng test raspberry && ng test central-dashboard",
    "test:raspberry": "ng test raspberry",
    "test:central": "ng test central-dashboard",
    "test:server": "cd central-server && npm test",
    "test:sync-agent": "cd raspberry/sync-agent && npm test",
    "lint": "ng lint raspberry && ng lint central-dashboard",
    "lint:raspberry": "ng lint raspberry",
    "lint:central": "ng lint central-dashboard",
    "lint:server": "cd central-server && npm run lint",
    "server": "node server-render/server.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ],
    "*.{json,md,html,scss,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@material-design-icons/font": "^0.14.15",
    "@types/pdfkit": "^0.17.4",
    "chart.js": "^4.5.1",
    "chrome-launcher": "^1.2.1",
    "pdfkit": "^0.17.2",
    "rxjs": "~7.8.0",
    "socket.io-client": "^4.8.1",
    "tslib": "^2.3.0",
    "video.js": "^8.23.4",
    "videojs-playlist": "^5.2.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.0",
    "@angular-eslint/builder": "^20.0.0",
    "@angular-eslint/eslint-plugin": "^20.0.0",
    "@angular-eslint/eslint-plugin-template": "^20.0.0",
    "@angular-eslint/template-parser": "^20.0.0",
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "^20.0.0",
    "husky": "^9.1.6",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.48.1"
  }
}
