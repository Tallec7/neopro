# Server
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/neopro_central

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=8h

# CORS
ALLOWED_ORIGINS=http://localhost:4200,https://control.neopro.fr

# Storage (pour vid√©os)
STORAGE_TYPE=local
STORAGE_PATH=/data/videos

# Optionnel: S3/MinIO pour production
# STORAGE_TYPE=s3
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=neopro-videos
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# Email (pour alertes)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@neopro.fr
SMTP_PASS=your-email-password
EMAIL_FROM=NEOPRO Fleet <noreply@neopro.fr>

# Logging
LOG_LEVEL=info
